<script>
    (function () {
        var table = {
                    total:0,
                    pageSize:1,
                    pageNum:0,
                    pagination:$('#pagination'),
                    container:$('#order_content'),
                    setPagination:{
                        num_edge_entries:3,
                        num_display_entries:5,
                        callback:function (pageNum,jq) {
                            $.ajax({
                                url:basePath + '/supplier/forwarding/forwardingList',
                                dataType:'json',
                                contentType:'application/json',
                                data:{
                                    pageSize:table.pageSize,
                                    index:pageNum+1
                                },
                                async:true,
                                type:'GET'
                            }).done(function(res){

                                if (res.code===1) { // 请求是否成功

                                    table.renderList(res.data.list, (res.data.pageNum-1)*res.data.pageSize);
                                }
                            });
                        }
                    },
                    thisRow:'',
                    init:function () {
                        $.ajax({
                            url:basePath + '/supplier/forwarding/forwardingList',
                            dataType:'json',
                            contentType:'application/json',
                            data:{
                                pageSize:table.pageSize,
                                index:1
                            },
                            async:true,
                            type:'GET'
                        }).done(function (res) {
                            if (res.code===1) { // 请求是否成功

                                if(!table.total){ // 是否需要渲染分页

                                    table.total = res.data.total;
                                    table.renderPagination();
                                }
                                table.renderList(res.data.list, (res.data.pageNum-1)*res.data.pageSize);
                            }
                        });

                        this.container.on('click.show', 'a[name]', this.clickHandler);
                    },
                    renderList:function (list, count) {
                        var tpl = '',
                            count = count;
                        if () {

                        }
                        $.each(list, function(i, item){
                            tpl +=
                                '<tr>' +
                                '<td>'+(++count)+'</td>'+
                                '<td><a href="'+basePath+'/supplier/forwarding/intoForwardingBasic?id='+table.hasField(item.id)+'">'+table.hasField(item.vbillcode)+'</a></td>'+
                                '<td>'+table.hasField(item.ctname)+'</td>'+
                                '<td>'+table.hasField(item.subscribedate)+'</td>'+
                                '<td>'+table.hasField(item.actualinvalidate)+'</td>'+
                                '<td>'+table.hasField(item.totalNumber)+'</td>'+
                                '<td>'+table.hasField(item.ntotalorigmny)+'</td>'+
                                '<td>'+table.hasField(item.remark)+'</td>'+
                                '<td>'+table.hasField()+'</td>'+
                                '</tr>';
                        });
                        this.container.html(tpl);
                    },
                    renderPagination:function () {
                        this.setPagination.items_per_page = this.pageSize;
                        this.pagination.pagination(this.total,this.setPagination);
                    },
                    hasField:function (field) {

                        if (field===null||field===undefined){
                            return '';
                        }else {
                            return field;
                        }
                    },
                    clickHandler:function (e) {
                        var id=$(this).data('id');

                        if (table.thisRow!=id) {

                            table.thisRow = $(this).data('id');
                            modal.init();
                        }else {

                            modal.dom.modal('show');
                        }
                    }
                },
                modal = {
                    dom:$('#details_modal'),
                    container:$('#order_details'),
                    init:function () {
                        var self = this;
                        $.ajax({
                            url:basePath + '',
                            dataType:'json',
                            contentType:'application/json',
                            data:{

                            },
                            type:'GET'
                        }).done(function (res) {
                            if (res.code===1) { // 请求是否成功

                                if(res.data.list){
                                    self.renderList(res.data.list);
                                    self.dom.modal('show');
                                }

                            }
                        });
                    },
                    renderList:function (list) {
                        var tpl = '';
                        $.each(list, function(i, item){
                            tpl +=
                                    '<tr>' +
                                    '<td>'+table.hasField(item.code)+'</td>'+
                                    '<td><a href="'+basePath+'/supplier/forwarding/intoForwardingBasic?id='+table.hasField(item.id)+'">'+table.hasField(item.name)+'</a></td>'+
                                    '<td>'+table.hasField(item.shortname)+'</td>'+
                                    '<td>'+table.hasField(item.startCooperateTime)+'</td>'+
                                    '<td>'+table.hasField(item.cooperateTime)+'</td>'+
                                    '<td>'+table.hasField(item.combinedScoring)+'</td>'+
                                    '<td>'+table.hasField()+'</td>'+
                                    '<td>'+table.hasField()+'</td>'+
                                    '<td>'+table.hasField()+'</td>'+
                                    '</tr>';
                        });
                        this.container.html(tpl);
                    }
                }
        table.init();
    })();
</script>