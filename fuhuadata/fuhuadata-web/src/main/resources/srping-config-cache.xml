<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="cacheManager" class="org.springframework.cache.support.SimpleCacheManager">
        <property name="caches">
            <set>
                <bean class="org.springframework.cache.guava.GuavaCache">
                    <constructor-arg value="areaCache"/>
                    <constructor-arg ref="areaGuavaCache"/>
                </bean>
            </set>
        </property>
    </bean>

    <bean id="guavaCacheFromSpec" class="com.google.common.cache.CacheBuilder"
          factory-method="from">
        <constructor-arg value=""/>
    </bean>

    <bean id="areaGuavaCache" factory-bean="guavaCacheFromSpec" factory-method="build"/>
</beans>