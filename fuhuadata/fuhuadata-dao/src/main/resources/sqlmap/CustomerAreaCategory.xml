<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
        "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="CustomerArea">
    <typeAlias alias="CustomerArea" type="com.fuhuadata.domain.CustomerArea"/>

    <select id="getAllList" resultClass="CustomerArea" parameterClass="java.lang.String">
        SELECT
            c.code pkAreacl,
            c.name,
            p.code pkFatherarea
        FROM
            t_areacl c,t_areacl p
        where ((c.code &lt; '91' and c.code &gt; '9') or c.name='其他')
        and c.pk_fatherarea = p.pk_areacl
        <isNotEmpty prepend="and" property="value">
            pk_fatherarea = #value#
        </isNotEmpty>
        order by c.code
    </select>

</sqlMap>