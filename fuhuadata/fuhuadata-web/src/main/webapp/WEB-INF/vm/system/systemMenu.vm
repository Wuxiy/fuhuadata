 <input id="parentId" type="hidden" value="" />
<script type="text/javascript" language="javascript" src="${request.contextPath}/lib/js/creatTree.js"></script>
<script>
    $(function () {
        var tree = $('<div class="tree"></div>');
        var modalTree = $('<div class="tree"></div>');
        modalTree.creatTree('${request.contextPath}/sys/menu/ajax/load');
        tree.creatTree('${request.contextPath}/sys/menu/ajax/load');
        $('#menuAside').append(tree);
        $('.panel-edit').find('input').not('.notDisabled').filter('.form-control').attr('disabled','disabled');
        $('#menuModal').append(modalTree);
        $(document).on('click.tree','#menuAside .tree a',function (e) {
            e.preventDefault();
            var thisEl = $(this);
            var par = thisEl.parents('.tree');
            par.find('li').removeClass('active');
            thisEl.parent('li').addClass('active');
            jQuery.ajax({
                url:'/sys/menu/ajax/'+thisEl.parent('li').attr('id'),
                type:'GET'
            }).done(renderMenu);
        });

        $(document).on('click.up','#addMenuItem',function () {
            var thisEl = $(this);
            $('input,button','.panel-body').not('.notEdit').removeAttr('disabled');
            $('#parentName').val($('#name').val());
            $('#parentId').val($('#menuId').val());
            $('#name').val('');
            $('#menuId').val('');
            $('#Url').val('');
//            $('#orderIndex').val('');
            var obj = {};
            obj.parentName = $('#parentName').val();
            obj.parentId = $('#parentId').val();
            jQuery.ajax({
                url:'',
                type:'POST',
                data:obj
            }).done(function (result) {
                if(result.data && result.data!='' && result.data!=null){
                    var data = result.data;
                    $('#orderIndex').val(data.orderIndex);
                }
            });
            $(document).off('.tree');
            $('#btnGroup').removeClass('hidden');
            thisEl.addClass('hidden');
        });

        $(document).on('click.up','#save',function () {
            var obj = {};
            obj.parentName = $('#parentName').val();
            obj.parentId = $('#parentId').val();
            obj.name = $('#name').val();
            obj.url = $('#Url').val();
            obj.enablestate = $('#enablestate').val();
            obj.orderIndex = $('#orderIndex').val();
            jQuery.ajax({
                url:'/sys/menu/ajax/add',
                type:'POST',
                data:obj
            }).done(function (result) {
                console.log(result);
                jQuery.ajax({
                    url:'/sys/menu/ajax/'+result.data,
                    type:'GET'
                }).done(renderMenu);
            });
            $('#addMenuItem').removeClass('hidden');
            $('#btnGroup').addClass('hidden');
        });
        function refreshTree(){

        }
        function renderMenu(result,p){
            if(result.data && result.data!='' && result.data!=null){
                var data = result.data;
                $('#menuId').val(data.menuId);
                $('#parentId').val(data.parentId);
                $('#name').val(data.name);
                $('#Url').val(data.url);
                $('#enablestate').val(data.enablestate);
                $('#orderIndex').val(data.orderIndex);
//                $('#parentName').val(thisEl.parent('li').parents('li').children('a').text());
            }
        }
    })

</script>
