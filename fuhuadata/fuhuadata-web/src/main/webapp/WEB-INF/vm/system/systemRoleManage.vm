                                    <th class="text-center col-xs-2">编号</th>
                                    <th class="text-center col-xs-4">菜单</th>
                                    <th class="text-center col-xs-2">授权人</th>
                                    <th class="text-center col-xs-4">授权时间</th>
                                </tr>
                                </thead>

                                <!-- 判断语句if else-->
                                <%if (data[0].nodes.length>0) { %>

                                    <%for(var i=0;i<data[0].nodes.length;i++){%>
                                    <tbody>
                                    <tr>
                                        <td><%=data[0].nodes[i].cid%></td>
                                        <td>
                                            <a data-toggle="collapse" href="#col<%=i%>menu">
                                                <%if (data[0].nodes[i].nodes.length>0) {%><b class="caret"></b><%}%>
                                                <%=data[0].nodes[i].cname%>
                                            </a>
                                        </td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    </tbody>
                                        <%if (data[0].nodes[i].nodes.length>0) { %>

                                            <%for(var j=0;j<data[0].nodes[i].nodes.length;j++){%>

                                            <tbody id="col<%=i%>menu" class="collapse">
                                                <td><%=data[0].nodes[i].nodes[j].cid%></td>
                                                <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%=data[0].nodes[i].nodes[j].cname%></td>
                                                <td></td>
                                                <td></td>
                                            </tbody>
                                            <%}%>
                                        <%}%>
                                    <%}%>
                                <%}else{%>
                                    <tbody>
                                    <tr><td rowspan="7">没有数据，请添加</td></tr>
                                    </tbody>
                                <%}%>

                                <!-- 模板结束 -->
                            </script>

                            <script id='btnTable' type="text/template">
                                <!-- 模板部分 -->
                                <caption>
                                    <button id="" data-target="#multiple" data-toggle="modal" class="btn-link pull-right" type="button">编辑</button>
                                </caption>
                                <thead>
                                <tr>
                                    <th class="text-center">编号</th>
                                    <th class="text-center">菜单</th>
                                    <th class="text-center">功能权限</th>
                                    <th class="text-center">授权人</th>
                                    <th class="text-center">授权时间</th>
                                </tr>
                                </thead>
                                <!-- 判断语句if else-->
                                <%if (data[0].nodes.length>0) { %>

                                <%for(var i=0;i<data[0].nodes.length;i++){%>
                                <tbody>
                                <tr>
                                    <td><%=data[0].nodes[i].cid%></td>
                                    <td>
                                        <a data-toggle="collapse" href="#col<%=i%>btn">
                                            <%=data[0].nodes[i].cname%>
                                            <%if (data[0].nodes[i].nodes.length>0) {%><b class="caret"></b><%}%>
                                        </a>
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                </tbody>
                                <%if (data[0].nodes[i].nodes.length>0) { %>

                                <%for(var j=0;j<data[0].nodes[i].nodes.length;j++){%>

                                <tbody id="col<%=i%>btn" class="collapse">
                                <td><%=data[0].nodes[i].nodes[j].cid%></td>
                                <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%=data[0].nodes[i].nodes[j].cname%></td>
                                <td>#*<label class="checkbox-inline"> <input type="checkbox">新增</label>*#</td>
                                <td></td>
                                <td></td>
                                </tbody>
                                <%}%>
                                <%}%>
                                <%}%>
                                <%}else{%>
                                <tbody>
                                <tr><td rowspan="7">没有数据，请添加</td></tr>
                                </tbody>
                                <%}%>
                                <!-- 模板结束 -->
                            </script>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
