<script type="text/javascript" language="JavaScript">
    $(function(){
        var table = {
                    total:0,
                    pageSize:10,
                    pageNum:0,
                    pagination:$('#pagination'),
                    container:$('#warehouseGradelist'),
                    setPagination:{
                        num_edge_entries:3,
                        num_display_entries:5,
                        callback:function (pageNum,jq) {
                            $.ajax({
                                url:basePath + '/supplier/warehouse/',
                                dataType:'json',
                                contentType:'application/json',
                                data:{
                                    pageSize:table.pageSize,
                                    index:pageNum+1
                                },
                                async:true,
                                type:'GET'
                            }).done(function(res){

                                if (res.code===1) { // 请求是否成功

                                    table.renderList(res.data.list);
                                }
                            });

                        }
                    },
                    init:function () {
                        $.ajax({
                            url:basePath + '/supplier/warehouse/',
                            dataType:'json',
                            contentType:'application/json',
                            data:{
                                pageSize:table.pageSize,
                                index:1
                            },
                            async:true,
                            type:'GET'
                        }).done(function (res) {
                            if (res.code===1) { // 请求是否成功

                                if(!table.total){ // 是否需要渲染分页

                                    table.total = res.data.total;
                                    table.renderPagination();
                                }
                                table.renderList(res.data.list);
                            }
                        });
                    },
                    renderList:function (list) {
                        var tpl = '';
                        if(list.length>0){
                            $.each(list, function(i, item){
                                tpl +=
                                        '<tr>' +
                                        '<td>'+table.hasField(item.code)+'</td>'+
                                        '<td>'+table.hasField(item.code)+'</td>'+
                                        '<td>'+table.hasField(item.shortname)+'</td>'+
                                        '<td>'+suppropsList[table.hasField(item.supprop)]+'</td>'+
                                        '<td>'+table.hasField(item.storaddr)+'</td>'+
                                        '<td>'+table.hasField(item.storageArea)+'</td>'+
                                        '<td>'+isDangersList[table.hasField(item.isDangers)]+'</td>'+
                                        '<td><a class="gradeinfo" data-id="">'+isInsideEntranceList[table.hasField(item.isInsideEntrance)]+'</a></td>'+
                                        '<td>'+table.hasField(item.combinedScoring)+'</td>'+
                                        '<td>'+table.hasField(item.memo)+'</td>'+
                                        '<td>'+table.hasField(item.memo)+'</td>'+
                                        '</tr>';
                            });
                        }else{
                            tpl += '<tr><td colspan="12">暂无数据</td></tr>';
                        }
                        this.container.html(tpl);
                    },
                    renderPagination:function () {
                        this.setPagination.items_per_page = this.pageSize;
                        this.pagination.pagination(this.total,this.setPagination);
                    },
                    hasField:function (field) {

                        if (field===null||field===undefined){
                            return '';
                        }else {
                            return field;
                        }
                    }
                };
        table.init();
    });

    $(document).on('click','.gradeinfo',function(){
        var id = $(this).attr('data-id');

        jQuery.ajax({
        })
    })

</script>
