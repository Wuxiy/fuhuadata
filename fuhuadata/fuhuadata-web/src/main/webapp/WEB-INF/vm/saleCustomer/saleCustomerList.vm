#set($default = "default.vm")
<!--列表部分-->
<div class="col-xs-12">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title" lang="zh">
				客户列表
				<small class="pull-right" style="margin-top: 4px;">单位：万元</small>
			</h3>
		</div>
		<div class="panel-body clearfix">
			<!--搜索&筛选控件-->
			<div class="form-horizontal">
				<div class="form-group">
					<div class="col-xs-2 pull-right">
						<div class="input-group">
							<input class="form-control" type="search" placeholder="输入关键词查找" lang="zh"/>
							<span class="input-group-btn">
								<button type="button" class="btn btn-primary btn-xs">
									<span lang="zh">搜索</span>
								</button>
							</span>
						</div>
					</div>
					<div class="col-xs-2 pull-right">
						<select class="form-control">
							<option lang="zh">客户状态</option>
							<option value="" lang="zh">正常</option>
							<option value="" lang="zh">易流失</option>
						</select>
					</div>
					<div class="col-xs-2 pull-right">
						<select class="form-control">
							<option lang="zh">客户类型</option>
							<option value="" lang="zh">战略客户</option>
							<option value="" lang="zh">大客户</option>
							<option value="" lang="zh">重要客户</option>
							<option value="" lang="zh">一般客户</option>
							<option value="" lang="zh">风险客户</option>
						</select>
					</div>
					<div class="col-xs-2 pull-right">
						<select class="form-control">
							<option lang="zh">企业性质</option>
							<option value="" lang="zh">加工厂</option>
							<option value="" lang="zh">分销商</option>
							<option value="" lang="zh">经销商</option>
							<option value="" lang="zh">终端客户</option>
							<option value="" lang="zh">其他</option>
						</select>
					</div>
					<div class="col-xs-2 pull-right">
						<select class="form-control">
							<option lang="zh">信用评级</option>
							<option value="">A</option>
							<option value="">AA</option>
							<option value="">AAA</option>
							<option value="">AAAA</option>
						</select>
					</div>
					<div class="col-xs-2 pull-right">
						<select class="form-control">
							<option value="" lang="zh">合作客户</option>
							<option value="" lang="zh">潜在客户</option>
							<option value="" lang="zh">流失客户</option>
						</select>
					</div>
				</div>
			</div>
			<!--表格-->
			<table class="table table-condensed table-bordered table-striped text-center">
				<thead>
					<tr>
						<th class="text-center" lang="zh">客户编号</th>
						<th class="text-center" lang="zh">客户全称</th>
						<th class="text-center" lang="zh">客户简称</th>
						<th class="text-center" lang="zh">国家</th>
						<th class="text-center" lang="zh">客户类型</th>
						<th class="text-center" lang="zh">信用评级</th>
						<th class="text-center" lang="zh">开始合作时间</th>
						<th class="text-center" lang="zh">合作时间</th>
						<th class="text-center" lang="zh">活跃周期</th>
						<th class="text-center" lang="zh">合同总金额</th>
						<th class="text-center" lang="zh">已回款金额</th>
						<th class="text-center" lang="zh">总最低销售限价</th>
						<th class="text-center" lang="zh">总维护费用</th>
						<th class="text-center" lang="zh">总利润</th>
						<th class="text-center" lang="zh">客户状态</th>
					</tr>
				</thead>
				<tbody>
					#foreach($saleCustomer in $SaleCustomers)
					<tr>
						<td>$!{saleCustomer.customerId}</td>
						<td><a href="http://www.baidu.com" target="_blank">${saleCustomer.customerParent.FullName}</a></td>
						<td>${saleCustomer.customerParent.shortName}</td>
						<td lang="zh">${saleCustomer.customerParent.Country}</td>
						<td lang="zh">#if(${saleCustomer.customerLevel}==0)未知#elseif(${saleCustomer.customerLevel}==1)风险客户"#elseif(${saleCustomer.customerLevel}==2)一般客户#elseif(${saleCustomer.customerLevel}==3)?重要客户#elseif(${saleCustomer.customerLevel}==4)大客户#else 战略客户 #end</td>
						<td>#if(${saleCustomer.zhongxinbaoLevel}==0)未知 #elseif(${saleCustomer.zhongxinbaoLevel}==1)1A #elseif(${saleCustomer.zhongxinbaoLevel}==2)2A #elseif(${saleCustomer.zhongxinbaoLevel}==3)3A #else 4A#end</td>
						<td>${saleCustomer.cooperateTime}</td>
						<td lang="zh">${saleCustomer.cooperateTime}</td>
						<td lang="zh">${saleCustomer.activePeriod}</td>
						<td><a href="" data-toggle="modal" data-target="#details">${saleCustomer.totalSaleMoney}</a></td>
						<td>${saleCustomer.activePeriod}</td>
						<td>${saleCustomer.lowestSaleMoney}</td>
						<td>${saleCustomer.totalMaintenanceCosts}</td>
						<td>${saleCustomer.totalProfits}</td>
						<td lang="zh">#if(${saleCustomer.customerState}==0)潜在客户 #elseif(${saleCustomer.customerState}==1)合作客户#else 已流失 #end</td>
					</tr>
					#end
				</tbody>
			</table>
			<!--分页导航-->
			<div class="form-group pull-left table-pagination">
				共<span>123</span>条记录，<span>130</span>页，跳转到第&nbsp;<input class="form-control pagination-input" type="number"/>&nbsp;页
				<button class="btn btn-xs btn-primary">确定</button>
			</div>
			<ul class="pagination pull-right table-pagination">
				<li class="disabled"><a href="#">上一页</a></li>
				<li class="active"><a href="#">1</a></li>
				<li><a href="#">2</a></li>
				<li><a href="#">3</a></li>
				<li><a href="#">4</a></li>
				<li><a href="#">5</a></li>
				<li><a href="#">6</a></li>
				<li><a href="#">7</a></li>
				<li><a href="">&hellip;</a></li>
				<li><a href="#">下一页</a></li>
			</ul>
		</div>
	</div>
</div>


