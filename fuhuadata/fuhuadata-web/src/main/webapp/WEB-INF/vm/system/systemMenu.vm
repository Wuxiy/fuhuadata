                            <label for="" class="control-label col-xs-1" lang="zh">页面路径</label>
                            <div class="col-xs-2"><input id="Url" class="form-control" type="text" value="" /></div>
                        </div>
                        <div class="form-group">
                            <label for="" class="control-label col-xs-1" lang="zh">菜单顺序</label>
                            <div class="col-xs-2"><input id="orderIndex" class="form-control" type="text" value="" /></div>
                            <label for="" class="control-label col-xs-1" lang="zh">启用状态</label>
                            <div class="col-xs-2">
                                <select id="enablestate" class="form-control">
                                    <option value="1" lang="zh">已启用</option>
                                    <option value="0" lang="zh">已禁用</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group"></div>
                        <div id="btnGroup" class="form-group hidden">
                            <div class="col-xs-1 col-xs-offset-2"><button id="cancel" class="btn btn-block btn-xs btn-default">取消</button></div>
                            <div class="col-xs-1"><button id="save" class="btn btn-block btn-xs btn-primary">保存</button></div>
                        </div>
                    </div>
                </div>
