<?xml version="1.0" encoding="GBK" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.multipart.maxSize" value="8388608" />
	<constant name="struts.multipart.saveDir" value="/tmp" />
	<constant name="struts.action.extension" value="html" />
	<constant name="struts.objectFactory.spring.autoWire" value="name" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.custom.i18n.resources" value="i18n/messages" />

	<package name="fuhuadata-global" extends="struts-default">
		<result-types>
			<result-type name="velocity" class="com.fuhuadata.web.velocity.VelocityLayoutResult" default="true" />
		</result-types>
		<global-results>
			<result name="error">/WEB-INF/vm/common/error.vm</result>
			<result name="login" type="redirect">${loginUrl}</result>
			<result name="mainIndexPage" type="redirect">/</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception" result="error" />
		</global-exception-mappings>

	</package>

	<!-- 模板中心拦截器的定义 -->
	<package name="fuhua-interceptor-definded" extends="fuhuadata-global">
		<interceptors>
            <interceptor name="monitoring" class="net.bull.javamelody.StrutsInterceptor"/>
			<interceptor-stack name="fuhuaDefaultStack">
                <interceptor-ref name="monitoring"/>
				<interceptor-ref name="exception" />
				<interceptor-ref name="alias" />
				<interceptor-ref name="servletConfig" />
				<interceptor-ref name="i18n" />
				<interceptor-ref name="prepare" />
				<interceptor-ref name="chain" />
				<interceptor-ref name="debugging" />
				<interceptor-ref name="scopedModelDriven" />
				<interceptor-ref name="modelDriven" />
				<interceptor-ref name="fileUpload">
					<param name="maximumSize">3145728</param>
					<!-- <param name="allowedTypes">image/png,image/jpeg,image/pjpeg,image/x-png,image/gif,image/jpg,application/x-shockwave-flash,audio/mp3,audio/x-ms-wma</param> -->
					<param name="allowedExtensions">jpg,jpeg,png,gif,swf,flv,mp3,wma,txt,bmp</param>
				</interceptor-ref>
				<interceptor-ref name="checkbox" />
				<interceptor-ref name="multiselect" />
				<interceptor-ref name="staticParams" />
				<interceptor-ref name="actionMappingParams" />
				<interceptor-ref name="params">
					<param name="excludeParams">dojo\..*,^struts\..*,.*\\u0023.*</param>
				</interceptor-ref>
				<interceptor-ref name="conversionError" />
				<interceptor-ref name="validation">
					<param name="excludeMethods">input,back,cancel,browse</param>
				</interceptor-ref>
				<interceptor-ref name="workflow">
					<param name="excludeMethods">input,back,cancel,browse</param>
				</interceptor-ref>  
			</interceptor-stack>
		</interceptors>
	</package>

	<!-- 继承自该包则仅使用登录认认证拦截器 -->
	<package name="fuhua-need-login-interceptor" extends="fuhua-interceptor-definded">
	</package>
	<!-- 不需要登陆用此拦截器 -->
	<package name="fuhua-no-need-login-interceptor" extends="fuhua-interceptor-definded">
	</package>
    
    <!-- 登录拦截器 -->
	<package name="json-noprotected-default" extends="fuhua-no-need-login-interceptor">
		<result-types>
			<result-type name="json" class="org.apache.struts2.json.JSONResult" />
		</result-types>
		<interceptors>
			<interceptor name="json" class="org.apache.struts2.json.JSONInterceptor" />
		</interceptors>
	</package>
	 
	<include file="struts/struts-fuhua-data.xml" />
</struts>
