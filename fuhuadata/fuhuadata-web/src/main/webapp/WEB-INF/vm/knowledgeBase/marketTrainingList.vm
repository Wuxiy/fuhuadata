  var pagesize = 5; // 分页步长
  $('#tree').creatTree(basePath+'/productCategory/CategoryTreeThree');
  $("#submit").click(function () {
      search();
  });
  search();

  // 搜索列表并渲染
  function search(){
      // 获取参数
      var data = collectArgs();

      getDataList(0,pagesize,rederLiset); // 初始化第一页数据

      // 获取总的条数
      getListCount(data,function (total) {

          // 渲染分页
          rederPaging(total,pagesize,function (pageNum,jq) {

              // 获取列表数据
              getDataList(pageNum,pagesize);
          })
      })

  }

  // 收集提交参数
  function collectArgs() {
      var obj={
          productType:$('#sproductType').val(),
          title:$('#stitle').val()
      }
      return obj;
  }

  // 获取列表数据条目总数
  function getListCount(data,callback){
      var total = 0;
      jQuery.ajax({
          url:basePath + '/marketTraining/count',
          dataType:'JSON',
          contentType:'application/json',
          data:JSON.stringify(data),
          async:true,
          type:'POST'
      }).done(function (res) {
          total = res.data;
          callback(total);
      });
  }

  // 渲染分页插件
  function rederPaging(total,pageSize,callback) {

      $("#pagination").pagination(total,{
          items_per_page : pageSize,
          num_edge_entries : 3,
          num_display_entries : 10,
          callback:callback
      });
  }

  // 根据页码获取列表数据
  function getDataList(pageNum,pageSize,callback) {
      jQuery.ajax({
          url:basePath + '/marketTraining/queryMarketTrainingList',
          dataType:'json',
          contentType:'application/json',
          data:JSON.stringify({
              productType:$('#sproductType').val(),
              title:$('#stitle').val(),
              startRow:pageNum*pageSize,
              pageSize:pageSize
          }),
          async:true,
          type:'POST'
      }).done(function (res) {
          // 渲染列表
          rederLiset(res,pageNum);
      });
  }
  // 渲染列表
  var companyTypeList = ['客户','竞对'];
  function rederLiset(data,pageNum){
      var ResultData = data.data,
              _html = '',
              count = pageNum*pagesize;

      if(ResultData && ResultData!='' && ResultData!='null') {
          for (var i = 0; i < ResultData.length; i++) {
              _html += '<tr>';
              _html += '<td>' + (++count) + '</td>';
              _html += '<td>' + (ResultData[i].title != undefined ? ResultData[i].title : '') + '</td>';
              _html += '<td>' + (ResultData[i].productType != undefined ? ResultData[i].productType : '') + '</td>';
              _html += '<td lang="zh">' + (ResultData[i].createUserId != undefined ? ResultData[i].createUserId : '') + '</td>';
              _html += '<td lang="zh">' + (ResultData[i].uploadDate != undefined ? ResultData[i].uploadDate : '') + '</td>';
              _html += '<td lang="zh">' + '下载' + '</td>';
      }
      $("#list").html(_html);
      _html += '</tr>';
  }
  }

